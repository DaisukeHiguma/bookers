<h2>Editing Book</h2>
<%if @book.errors.any?%>
  <% @book.errors.full_messages.each do |message| %>
  <%="error"%>
      <%= message %>

  <% end %>
    <% end %>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "show", book_path(@book) %>
<%= link_to "back", books_path %>